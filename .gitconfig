[user]
	name = Kevin
	email = kvn@lws.io

[init]
	defaultBranch = main

[pull]
	rebase = true

[push]
	autoSetupRemote = true

[alias]
	ac = !git add -A && git commit -m
	st = status -sb
	co = checkout
	br = branch
	lg = log --oneline --graph --decorate -20
	undo = reset --soft HEAD~1
	amend = commit --amend --no-edit

[core]
	editor = code --wait
	autocrlf = input
	pager = less -FX

[merge]
	conflictstyle = zdiff3

[diff]
	algorithm = histogram
	colorMoved = default

[rerere]
	enabled = true

[fetch]
	prune = true

[credential]
	helper = store
